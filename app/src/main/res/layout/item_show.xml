<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="200dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/show_icon"
            android:layout_width="100dp"
            android:layout_height="125dp"
            android:scaleType="centerCrop"
            fresco:placeholderImage="@mipmap/default_list_pic"/>

        <TextView
            android:id="@+id/show_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/show_icon"
            android:layout_marginTop="@dimen/sign_margin"
            android:layout_marginBottom="@dimen/sign_margin">
        </TextView>

        <TextView
            android:id="@+id/show_descriptionURL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/show_icon"
            android:layout_below="@id/show_name"
            android:layout_marginTop="@dimen/sign_margin"
            android:layout_marginBottom="@dimen/sign_margin">
        </TextView>


</RelativeLayout>