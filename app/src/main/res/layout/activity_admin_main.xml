<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/admin_bannerBtn"
        android:text="@string/bannerBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/admin_showBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/showBtn"
        android:layout_below="@id/admin_bannerBtn"/>

    <Button
        android:id="@+id/admin_exitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="退出登录"
        android:layout_below="@id/admin_showBtn"/>


</RelativeLayout>